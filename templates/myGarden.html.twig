{% extends 'base.html.twig' %}

{% block title %}My Garden{% endblock %}

{% block body %}

    <div class="row">
    <div class="col-sm">
    <h1>Mein Garten</h1>

    <div>hinzufügen</div>

    <div class="row border border-success" >
        <div class="col-sm">
        <div class="row">
            {% for plant in plants %}
            <div class="col-sm" id="Eintrag">
                <ul>
                    <li >{{ plant.name }} ({{ plant.genus }})</li>
                    <li>Ist durstig!</li>
                    <li>Standort</li>
                    <li>Gießzeit</li>
                    <li>Menge</li>
                </ul>
            </div>

            <img src="{{ plant.icon }}" class="col-sm">

        </div>

        <div class="row">
            <button class="col-sm" >Gießen</button>
        </div>

        </div>
    </div>
    </div>

    <div class="col-sm">
        <img src="Images/Aloe.png" alt="Plant side view" class="col-sm">
    </div>

    </div>


    {% endfor %}

{% endblock %}


