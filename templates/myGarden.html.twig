{% extends 'base.html.twig' %}

{% block title %}My Garden{% endblock %}

{% block body %}

    <div class="row">
    <div class="col-sm">
    <h1>Mein Garten</h1>

    <div>hinzufügen</div>

    <div class="row border bg-light" >
        <div class="col-sm">
            {% for userplant in userplants %}
        <div class="row">

            <div class="col-sm bg-light" id="Eintrag" >
                <ul>
                    <li >{{ userplant.name }} ({{ userplant.getPlant().genus }})</li>
                    <li>Ist durstig!</li>
                    <li>{{ userplant.location }} </li>
                    <li>Gießzeit</li>
                    <li>Menge</li>
                </ul>
            </div>

            <img src="{{ userplant.getPlant().icon}}" alt="Picture of plant" height="150"  class="col-sm">

        </div>

        <div class="row">
            <button class="col-sm" >Gießen</button>
        </div>
            {% endfor %}
        </div>
    </div>

    </div>

    <div class="col-sm">
        <img src="{{ userplants[0].getPlant().WindowIcon }}" alt="Plant side view" height="700" class="col-sm">
    </div>

    </div>


{% endblock %}


