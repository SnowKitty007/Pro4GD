{% extends 'base.html.twig' %}

{% block title %}My Garden{% endblock %}

{% block body %}

    <div class="row marginLeftRight">
    <div class="col-sm">
        <div class="row ">
            <h1 class="col-sm">Mein Garten</h1>

            <div class="col-sm add">hinzufügen</div>
        </div>

    <div class="col-sm">
            {% for userplant in userplants %}

        <div class="bgWhiteGrey plantsProfile dropShadow ">
        <div class="row">

            <div class="col-sm" id="Eintrag" >
                <ul>
                    <li >{{ userplant.name }} ({{ userplant.getPlant().genus }})</li>
                    <li>Ist durstig!</li>
                    <li>{{ userplant.location }} </li>
                    <li>Gießzeit</li>
                    <li>Menge</li>
                </ul>
            </div>

            <img class="col-sm imgTest" src="{{ userplant.getPlant().icon}}" alt="Picture of plant" height="150">

        </div>

        <div class="row">
            <button class="col-sm" >Gießen</button>
        </div>
        </div>

            {% endfor %}

    </div>

    </div>

    <div class="col-sm">
        <img src="{{ userplants[0].getPlant().WindowIcon }}" alt="Plant side view" height="700" class="col-sm">
    </div>

    </div>


{% endblock %}


