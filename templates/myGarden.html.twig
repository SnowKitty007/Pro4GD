    <div class="col-sm">
    <h1>Mein Garten</h1>

    <div>hinzufügen</div>

    <div class="row border border-success" >
        <div class="col-sm">
        <div class="row">
            {% for plant in plants %}
    {% for im in image %}
            <div class="col-sm" id="Eintrag">
                <ul>
                    <li >{{ plant.name }} ({{ plant.name }})</li>
